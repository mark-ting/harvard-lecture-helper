{
    "manifest_version": 2,
    "name": "Harvard Lecture Helper",
    "version": "0.2.0",

    "description": "An extension to help with videos and note taking! To be used in conjunction with CS50 2x",

    "icons": { "16": "img/icon_16.png",
               "48": "img/icon_48.png",
              "128": "img/icon_128.png" },

    "content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'",

    /*
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    */

    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png" },

        "default_title": "Harvard Note Helper",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "browsingData",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "cookies",
        "storage",
        "webNavigation",
        "windows"
    ],

    "web_accessible_resources": [
        "popup.html"
    ]
}