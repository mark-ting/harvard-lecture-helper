{
    "manifest_version": 2,
    "name": "Harvard Note Helper",
    "version": "0.1.1",

    "description": "An extension to help with videos and note taking! To be used in conjunction with CS50 2x",
    /*
    "icons": { "16": "img/16.png",
               "48": "img/48.png",
              "128": "img/128.png" },
              */

    "content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'",
    "browser_action": {
        /*
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png" },
        */
        "default_title": "Harvard Note Helper",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "browsingData",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "cookies",
        "storage",
        "webNavigation"
    ]
}