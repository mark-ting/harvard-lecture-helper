{
    "manifest_version": 2,
    "name": "HLH TESTBED",
    "version": "0.0.0.1",

    "description": "HLH TESTBED DESCRIPTION",

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

    "browser_action": {
        "name": "HLH TESTBED NAME",
        "default_title": "HLH TESTBED TITLE",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "activeTab",
        "browsingData",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "cookies",
        "storage",
        "webNavigation",
        "windows"
    ],

    "web_accessible_resources": [
        "css/*",
        "img/*",
        "lib/*",
        "popup.html"
    ]
}